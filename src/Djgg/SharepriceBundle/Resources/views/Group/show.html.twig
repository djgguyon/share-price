{% extends "DjggSharepriceBundle::layout.html.twig" %}

{% block title %}{{ parent() }} group{% endblock %}

{% block DjggShareprice_body %}

<p class="titre"><span>Group {{ entity.id }} : {{ entity.name }}</span>
<a class="action_list" href="{{ path('djgg_shareprice_group_grid') }}">Back to the list</a>
</p>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('djgg_shareprice_group_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('djgg_shareprice_group_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}